<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/view_status_header"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:background="@color/light_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/broccolis"
        app:layout_constraintBottom_toBottomOf="@+id/view_status_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_status_header" />

    <TextView
        android:id="@+id/thank_you_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:text="Thank you for your Order!"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_status_header"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_status_header"
        app:layout_constraintVertical_bias="0.561" />

    <View
        android:id="@+id/order_number_view1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_rectangle_2"
        android:backgroundTint="#EBEFF2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_status_header" />

    <TextView
        android:id="@+id/order_num_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Order Number"
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/order_number_view1"
        app:layout_constraintStart_toStartOf="@+id/order_number_view1"
        app:layout_constraintTop_toTopOf="@+id/order_number_view1" />

    <View
        android:id="@+id/order_status_small_view"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="@drawable/rounded_rectangle_2"
        android:backgroundTint="@color/light_blue"
        app:layout_constraintEnd_toEndOf="@+id/order_number_view1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/order_num_title"
        app:layout_constraintTop_toTopOf="@+id/order_number_view1" />

    <ImageView
        android:id="@+id/broccoli_image"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/single_broccoli"
        app:layout_constraintBottom_toBottomOf="@+id/order_status_small_view"
        app:layout_constraintEnd_toEndOf="@+id/order_number_view1"
        app:layout_constraintStart_toStartOf="@+id/order_status_small_view"
        app:layout_constraintTop_toTopOf="@+id/order_status_small_view" />

    <TextView
        android:id="@+id/order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Num"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/order_status_small_view"
        app:layout_constraintEnd_toEndOf="@+id/broccoli_image"
        app:layout_constraintStart_toStartOf="@+id/order_status_small_view"
        app:layout_constraintTop_toTopOf="@+id/order_status_small_view" />

    <View
        android:id="@+id/bar1_view"
        android:layout_width="90dp"
        android:layout_height="450dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="-2dp"
        android:background="@drawable/rounded_rectangle_2"
        android:backgroundTint="#EBEFF2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_number_view1"
        app:layout_constraintVertical_bias="0.507" />

    <View
        android:id="@+id/bar2_view"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:background="@drawable/rounded_rectangle_2"
        android:backgroundTint="@color/light_blue"
        app:layout_constraintBottom_toBottomOf="@+id/bar1_view"
        app:layout_constraintEnd_toEndOf="@+id/bar1_view"
        app:layout_constraintStart_toStartOf="@+id/bar1_view"
        app:layout_constraintTop_toTopOf="@+id/bar1_view"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/bar3_view"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/rounded_rectangle_2"
        android:backgroundTint="@color/dark_blue"
        app:layout_constraintBottom_toBottomOf="@+id/bar1_view"
        app:layout_constraintEnd_toEndOf="@+id/bar1_view"
        app:layout_constraintStart_toStartOf="@+id/bar1_view"
        app:layout_constraintTop_toTopOf="@+id/bar1_view"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/return_back_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/dark_blue"
        android:text="Return Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar1_view"
        app:layout_constraintVertical_bias="0.6" />

    <CheckBox
        android:id="@+id/order_placed_checkBox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="70dp"
        android:buttonTint="@color/light_blue"
        android:checked="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/order_placed_text"
        app:layout_constraintTop_toTopOf="@+id/order_placed_text" />

    <TextView
        android:id="@+id/order_placed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Order Placed"
        android:textColor="@color/faq_tc_help_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/bar1_view"
        app:layout_constraintTop_toTopOf="@+id/bar1_view" />

    <CheckBox
        android:id="@+id/order_preparing_checkBox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="70dp"
        android:buttonTint="@color/light_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/order_preparing_text"
        app:layout_constraintTop_toTopOf="@+id/order_preparing_text" />

    <TextView
        android:id="@+id/order_preparing_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Order Preparing"
        android:textColor="@color/light_blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/bar2_view"
        app:layout_constraintTop_toTopOf="@+id/bar2_view" />

    <CheckBox
        android:id="@+id/order_ready_checkBox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="70dp"
        android:buttonTint="@color/light_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/order_ready_text"
        app:layout_constraintTop_toTopOf="@+id/order_ready_text" />

    <TextView
        android:id="@+id/order_ready_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Order Ready"
        android:textColor="@color/dark_blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/bar3_view"
        app:layout_constraintTop_toTopOf="@+id/bar3_view" />


</androidx.constraintlayout.widget.ConstraintLayout>
