<!-- res/drawable/custom_radio_button.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <size android:width="24dp" android:height="24dp" />
            <solid android:color="@color/highlighted_orange_color" /> <!-- Change this to your selected color -->
            <stroke android:width="2dp" android:color="@color/dark_blue" /> <!-- Optional border color -->
        </shape>
    </item>

    <!-- Default (unselected) state -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <size android:width="24dp" android:height="24dp" />
            <solid android:color="@color/faq_tc_help_color" /> <!-- Change this to your unselected color -->
            <stroke android:width="2dp" android:color="@color/dark_blue" /> <!-- Optional border color -->
        </shape>
    </item>
</selector>